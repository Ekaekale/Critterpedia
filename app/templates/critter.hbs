{{!-- template-lint-disable table-groups --}}
<div class="container-fluid bg-light bg-ac shadow py-3">
  <div class="d-flex align-items-center">
    {{#link-to "index" class="text-body mr-3"}} {{fa-icon "chevron-left"}} {{/link-to}}
    <h1 class="mb-0">{{model.name}}</h1>
  </div>
</div>

<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12 col-sm-6">
      <table class="table table-borderless">
        {{!-- <tr>
          <td>Critter Type</td>
          <td class="font-weight-bold">{{model.type}}</td>
        </tr> --}}
        {{!-- <tr>
          <td>Price</td>
          <td class="font-weight-bold">{{model.price}} bells</td>
        </tr> --}}
        <tr>
          <td>Location</td>
          <td class="font-weight-bold">{{model.location}}</td>
        </tr>
      </table>
    </div>
    <div class="col-12 col-sm-6">
      <h4 class="mt-4">Active Hours</h4>
      <table class="w-100 active-time-chart">
        <tbody>
          {{!-- <tr>
            <td colspan="12" class="w-25 p-0">AM</td>
            <td colspan="12" class="w-25 p-0">PM</td>
          </tr> --}}
          <tr>
            <td colspan="6" class="w-25 pl-1 border-left">12am</td>
            <td colspan="6" class="w-25 p-0">6</td>
            <td colspan="6" class="w-25 pl-1 border-left">12pm</td>
            <td colspan="6" class="w-25 p-0 border-right">6</td>
          </tr>
          <tr class="time-row">
            {{#each activeHours as |hour|}}
              <td class={{if hour "active"}}>&nbsp;</td>
            {{/each}}
          </tr>
        </tbody>
      </table>

      <h4 class="mt-5">Seasonality</h4>
      <table class="table table-bordered text-center active-month-chart">
        {{#each activeMonths as |monthRow|}}
          <tr>
            {{#each monthRow as |month|}}
              <td class="p-1">
                <div class="py-2 {{if month.active "active rounded"}}">
                  {{month.name}}
                </div>
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </table>
    </div>
  </div>


</div>

{{outlet}}
